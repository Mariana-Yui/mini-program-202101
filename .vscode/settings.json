{
  "files.associations": {
    "*.js": "javascript",
    ".editorconfig": "typescript",
    "tslint.json": "jsonc",
    "*.cjson": "jsonc",
    "*.wxss": "css",
    "*.wxs": "javascript",
    "*.wxml": "wxml"
  },
  "easysass.formats": [
    {
      "format": "expanded", // 没有缩进的、扩展的css代码
      "extension": ".wxss" //转化的后缀名
    }
  ],
  "editor.formatOnSave": true, // lct_web 中暂时关掉
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // lct_web 中暂时关掉
  },
  "eslint.format.enable": true
}
