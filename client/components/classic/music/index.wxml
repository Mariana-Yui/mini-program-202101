<view class="container" hidden="{{hidden}}">
  <image class="classic-img {{playing ? 'rotate':''}}" src="{{img}}" />
  <image bind:tap="handlePlay" class="player-img" src="{{playing ? playSrc : pauseSrc}}" />
  <image class="tag" src="images/music@tag.png" />
  <text class="content">{{content}}</text>
</view>
