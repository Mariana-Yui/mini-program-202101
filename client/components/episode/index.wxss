.container {
  display: inline-flex;
  flex-direction: row;
}

.container .index-container {
  display: flex;
  align-items: baseline;
}

.container .index-container .plain {
  font-size: 16px;
}

.container .index-container .index {
  font-size: 30px;
  font-weight: 800px;
  margin-right: 7px;
}

.container .index-container .vertical-line {
  margin-right: 7px;
  height: 22px;
  border-left: 1px solid #000000;
}

.container .date-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.container .date-container .month {
  font-size: 12px;
  line-height: 12px;
  padding-bottom: 2px;
  margin-right: 3rpx;
}

.container .date-container .year {
  font-size: 10px;
  line-height: 10px;
  padding-bottom: 3px;
}
